<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tev_type"
        android:text="未知"
        android:padding="5sp"
        android:textColor="?attr/item_main_text_color"
        android:layout_marginRight="5dp"
        android:background="@color/bg_orange"
        android:textSize="@dimen/font_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stock_name"
        android:layout_toRightOf="@+id/tev_type"
        android:textColor="?attr/item_main_text_color"
        android:textSize="@dimen/font_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_add"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/stock_id"
        android:textColor="?attr/item_sub_text_color"
        android:textSize="@dimen/font_14"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stock_name"
        android:layout_alignBottom="@+id/stock_name"
        android:layout_toRightOf="@+id/stock_name"
        android:layout_toLeftOf="@+id/img_add"
        android:layout_toEndOf="@+id/stock_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
