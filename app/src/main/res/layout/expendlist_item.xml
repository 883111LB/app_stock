<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:padding="10dp"
     android:layout_height="wrap_content"
     android:tag="1">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tev_company"
            android:text="--"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text_white_16"/>

        <TextView
            android:id="@+id/tev_code"
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text_gray_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/tev_newestprice"
        android:text="dfsfsfsd--"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_21"
        android:textColor="?attr/item_context_text_color"
        />
    <!--style="@style/Text_white_21"-->

    <TextView
        android:id="@+id/tev_raiserange"
        android:text="fsdfsdfsd--%"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_16"
        android:textColor="?attr/item_main_text_color"/>
    <!--style="@style/Text_white_16"-->
</LinearLayout>