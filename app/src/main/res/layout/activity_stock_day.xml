<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/background_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.cvicse.stock.view.AutofitTextView
                android:id="@+id/tev_stockName"
                android:paddingLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="股票名称"
                style="@style/Text_white_16"
                android:maxLines="1"
                android:textColor="?attr/text_withe_black"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tev_stockCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="股票代码"
                style="@style/Text_gray_14" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.cvicse.stock.view.AutofitTextView
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tev_lastprice"
                        android:textColor="?attr/text_withe_black"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:singleLine="true"/>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/text_withe_black"
                            android:text="--" />

                        <TextView
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_changeRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="?attr/text_withe_black"
                            android:text="--" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_highPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="低"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_lowPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_openPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_preClosePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="量"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="额"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="换手"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_turnoverRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="量比"
                            style="@style/Text_gary2_14" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tev_volume_ratio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="--"
                            style="@style/Text_white_14"
                            android:textColor="?attr/text_withe_black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <ImageView
            android:layout_gravity="center|right|top"
            android:id="@+id/img_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/img_cancle" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/content_frame_tick"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/layout_chart_top_type"/>
</LinearLayout>
