<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    >
    <TextView
        android:id="@+id/tev_buy_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:textColor="?attr/text_withe_black"
        android:text="买入前五营业部"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/tev_buy_title"
        android:textColor="?attr/text_withe_black"
        android:text="交易日期"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="?attr/text_withe_black"
        android:text="买卖金额"
        />

    <LinearLayout
        android:id="@+id/lly_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tev_buy_title"
        android:orientation="vertical"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_5"
        android:background="@color/bg_gray"
        android:layout_below="@id/lly_buy"
        />


    <TextView
        android:id="@+id/tev_sell_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_line"
        android:textColor="?attr/text_withe_black"
        android:text="卖出前五营业部"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/tev_sell_title"
        android:layout_below="@id/view_line"
        android:textColor="?attr/text_withe_black"
        android:text="交易日期"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_line"
        android:textColor="?attr/text_withe_black"
        android:text="买卖金额"
        />

    <LinearLayout
        android:id="@+id/lly_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tev_sell_title"
        android:orientation="vertical"
        />
</RelativeLayout>