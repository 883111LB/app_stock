<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:tag="1"
    android:background="?attr/markert_item_grd_bg"
    android:orientation="vertical">

 <TextView
     android:id="@+id/tev_type"
     android:textColor="?attr/item_main_text_color"
     android:gravity="center"
     android:textSize="14sp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tev_rate"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/text_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tev_company"
        android:gravity="center"
        android:textSize="9sp"
        android:textColor="?attr/markert_item_detail_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tev_num"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="9sp"
        android:layout_marginRight="5dp"
        android:textColor="?attr/markert_item_detail_text_color"
        android:gravity="right"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tev_change"
            android:gravity="left"
            android:textSize="9sp"
            android:layout_weight="1"
            android:textColor="?attr/markert_item_detail_text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

</LinearLayout>

</LinearLayout>
