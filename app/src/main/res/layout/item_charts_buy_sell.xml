<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/default_10"
    android:paddingRight="@dimen/default_10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tev_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_15"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tev_time"
                android:gravity="left"
                android:textColor="?attr/f10_content_text_color"
                />
            <TextView
                android:id="@+id/tev_time"
                android:layout_width="@dimen/default_80"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toLeftOf="@+id/tev_buy_price"
                android:textColor="?attr/f10_content_text_color"
                />
            <TextView
                android:id="@+id/tev_buy_price"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/default_60"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_red"
                />
            <TextView
                android:id="@+id/tev_sell_price"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/default_50"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/default_5"
                android:layout_below="@id/tev_buy_price"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_green"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>