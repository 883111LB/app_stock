<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/markert_fragment_bg">

        <ScrollView
             android:scrollbars="none"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100.0dip">

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="?attr/markert_group_text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="沪深个股"/>

                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_hsstock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="沪深指数"
                    android:textColor="?attr/markert_group_text_color"/>
                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_hsindex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="沪深港通"
                    android:textColor="?attr/markert_group_text_color"/>
                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_shszhk_tong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="香港市场"
                    android:textColor="?attr/markert_group_text_color"/>
                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_hk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="新三板"
                    android:textColor="?attr/markert_group_text_color"/>
                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_xsb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="期权"
                    android:textColor="?attr/markert_group_text_color"/>

                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="期货"
                    android:textColor="?attr/markert_group_text_color"/>

                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_futures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="海外市场"
                    android:textColor="?attr/markert_group_text_color"/>

                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_foreign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />
                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="沪伦通"
                    android:textColor="?attr/markert_group_text_color"/>

                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_cdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:text="债券"
                    android:textColor="?attr/markert_group_text_color"/>

                <com.cvicse.stock.view.MyGridView
                    android:layout_gravity="center"
                    android:id="@+id/grd_bond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:horizontalSpacing="2.0dip"
                    android:verticalSpacing="2.0dip"
                    android:stretchMode="columnWidth"
                    android:numColumns="3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/bg_black_light_color"/>

            </LinearLayout>
        </ScrollView>
</FrameLayout>