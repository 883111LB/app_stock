<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <com.cvicse.stock.view.CHScrollView
        android:id="@+id/item_scroll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.cvicse.stock.view.PressedLinearLayout
            android:id="@+id/plr_item_left"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gou_peninterest"
                android:text="持仓量"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>
            <TextView
                android:id="@+id/gou_amount"
                android:text="金额"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

            <TextView
                android:id="@+id/gou_volume"
                android:text="总量"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>


            <TextView
                android:id="@+id/gou_sellprice"
                android:gravity="center"
                android:text="卖价"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>


            <TextView
                android:id="@+id/gou_buyprice"
                android:text="买价"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

            <TextView
                android:id="@+id/gou_change"
                android:text="涨跌"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"/>

            <TextView
                android:id="@+id/gou_changerate"
                android:text="涨幅"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>


            <TextView
                android:id="@+id/gou_lastprice"
                android:text="最新"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

        </com.cvicse.stock.view.PressedLinearLayout>
    </com.cvicse.stock.view.CHScrollView>


    <TextView
        android:id="@+id/tev_exeprice"
        android:text="--"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="?attr/item_context_text_color"
        android:layout_width="78dp"
        android:layout_height="wrap_content" />


    <com.cvicse.stock.view.CHScrollView
        android:id="@+id/item_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.cvicse.stock.view.PressedLinearLayout
            android:id="@+id/plr_item_right"
            android:clickable="false"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gu_lastprice"
                android:text="最新"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

            <TextView
                android:id="@+id/gu_changerate"
                android:text="涨幅"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

            <TextView
                android:id="@+id/gu_change"
                android:text="涨跌"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>


            <TextView
                android:id="@+id/gu_buyprice"
                android:text="买价"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>


            <TextView
                android:id="@+id/gu_sellprice"
                android:text="卖价"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

            <TextView
                android:id="@+id/gu_volume"
                android:text="总量"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

            <TextView
                android:id="@+id/gu_amount"
                android:text="金额"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>


            <TextView
                android:id="@+id/gu_peninterest"
                android:text="持仓量"
                android:gravity="center"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                style="@style/Text_white_18"
                android:textColor="?attr/item_context_text_color"/>

        </com.cvicse.stock.view.PressedLinearLayout>
    </com.cvicse.stock.view.CHScrollView>
    </LinearLayout>
