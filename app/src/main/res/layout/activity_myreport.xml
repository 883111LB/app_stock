<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".portfolio.activity.ReportActivity">

    <com.cvicse.stock.base.ToolBar
        android:id="@+id/topbar"
        app:filtercolor="?attr/filtercolor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:textColor_title="?attr/text_toolbar_title_color"
        app:src_left="@drawable/common_return_back_arrow"
        android:background="?attr/bg_toolbar" />


    <com.cvicse.stock.pulltorefresh.PullToRefreshListView
        android:id="@+id/lst_my_report"
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tev_content"
        android:layout_below="@+id/lst_my_report"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/tev_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </TextView>

</RelativeLayout>
