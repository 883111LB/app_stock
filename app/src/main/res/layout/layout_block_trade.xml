<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tev_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_50"
        android:paddingLeft="@dimen/default_10"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="?attr/text_withe_black"
        android:textSize="@dimen/font_18"
        android:text="历史大宗交易数据"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_5"
        android:background="@color/listview_divier"
        />
    <ListView
        android:id="@+id/lsv_block_trade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="@dimen/default_2"
        android:divider="@color/listview_divier"
        />

    <TextView
        android:id="@+id/tev_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/text_withe_black"
        android:text="无相关信息"
        />

</LinearLayout>