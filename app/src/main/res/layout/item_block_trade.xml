<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tev_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_25"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="?attr/text_withe_black"
        android:text="--"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tev_trade_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_25"
            android:gravity="center_vertical"
            android:textColor="?attr/text_withe_black"
            android:text="成交价(元):--"
            />
        <TextView
            android:id="@+id/tev_trade_volume"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_25"
            android:gravity="center_vertical"
            android:textColor="?attr/text_withe_black"
            android:text="成交量(股):--"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tev_trade_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_25"
            android:gravity="center_vertical"
            android:textColor="?attr/text_withe_black"
            android:text="成交额(元):--"
            />

        <TextView
            android:id="@+id/tev_trade_prc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_25"
            android:gravity="center_vertical"
            android:textColor="?attr/text_withe_black"
            android:text="折溢率(%):--"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tev_buyername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/default_25"
        android:gravity="center_vertical"
        android:textColor="?attr/text_withe_black"
        android:text="买方营业部:--"
        />
    <TextView
        android:id="@+id/tev_sellername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/default_25"
        android:gravity="center_vertical"
        android:textColor="?attr/text_withe_black"
        android:text="卖方营业部:--"
        />
</LinearLayout>