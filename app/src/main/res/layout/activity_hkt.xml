<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/background_color"
    tools:context=".portfolio.activity.RecentlyActivity">

    <com.cvicse.stock.base.ToolBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:text_title="沪深港通"
        app:filtercolor="?attr/filtercolor_toolbar"
        app:textColor_title="?attr/text_toolbar_title_color"
        app:src_left="@drawable/common_return_back_arrow"
        app:src_right_1="@drawable/navigationbar_button_search"
        android:background="?attr/bg_toolbar" />

    <com.cvicse.stock.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/default_15"
            android:paddingRight="@dimen/default_15"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tev_label_h"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="港股通(沪)"
                        android:textSize="@dimen/font_16"
                        android:textColor="?attr/text_toolbar_title_color"/>
                    <TextView
                        android:id="@+id/tev_label_h2"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tev_label_h"
                        android:textSize="@dimen/font_14"
                        android:text="经沪市流向港股"
                        android:textColor="?attr/text_toolbar_title_color" />
                    <TextView
                        android:id="@+id/tev_ggt_h"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tev_label_h2"
                        android:text="" />
                    <TextView
                        android:id="@+id/tev_label_h3"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tev_ggt_h"
                        android:layout_alignBottom="@+id/tev_ggt_h"
                        android:textSize="@dimen/font_14"
                        android:text="净流入" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tev_label_s"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="港股通(深)"
                        android:textSize="@dimen/font_16"
                        android:textColor="?attr/text_toolbar_title_color" />
                    <TextView
                        android:id="@+id/tev_label_s2"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tev_label_s"
                        android:textSize="@dimen/font_14"
                        android:text="经深市流向港股"
                        android:textColor="?attr/text_toolbar_title_color" />
                    <TextView
                        android:id="@+id/tev_ggt_s"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tev_label_s2"
                        android:text="" />
                    <TextView
                        android:id="@+id/tev_label_s3"
                        style="@style/Text_hk_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tev_ggt_s"
                        android:layout_alignBottom="@+id/tev_ggt_s"
                        android:textSize="@dimen/font_14"
                        android:text="净流入" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/default_10"
                android:background="@color/gray"/>
            <!-- 图表 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_10">
                <LinearLayout
                    android:id="@+id/lnl_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/default_10"
                    android:background="@drawable/shape_btn_bg_gray"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tev_type_hkt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:text="港股通"
                        android:textColor="?attr/item_context_text_color"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tev_type_hkt_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:text="港股通"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        />
                    <TextView
                        android:id="@+id/tev_type_hst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:text="沪深股通"
                        android:textColor="?attr/item_context_text_color"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tev_type_hst_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:text="沪深股通"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tev_label"
                    style="@style/Text_hk_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnl_type"
                    android:text="陆资流向港股趋势"
                    android:textColor="?attr/text_toolbar_title_color"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/tev_label"
                    android:layout_marginTop="@dimen/default_5"
                    />

            </RelativeLayout>
        </LinearLayout>
    </com.cvicse.stock.pulltorefresh.PullToRefreshScrollView>


</LinearLayout>