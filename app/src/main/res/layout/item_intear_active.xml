<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tev_question_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_25"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="?attr/text_withe_black"
            android:text="--"
            />
        <TextView
            android:id="@+id/tev_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/default_25"
            android:gravity="center_vertical"
            android:textColor="?attr/text_withe_black"
            android:text="--"
            />
        <TextView
            android:id="@+id/tev_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_25"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="?attr/text_withe_black"
            android:text="--"
            />
        <TextView
            android:id="@+id/tev_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/default_25"
            android:gravity="center_vertical"
            android:textColor="?attr/text_withe_black"
            android:text="--"
            />
    </LinearLayout>

</LinearLayout>