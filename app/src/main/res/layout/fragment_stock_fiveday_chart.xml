<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/markert_chart_bg"
    android:layout_width="match_parent"
    android:layout_height="250dip">
    <LinearLayout
        android:id="@+id/lel_top"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tev_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_11"
            android:textColor="?attr/text_withe_black"
            tools:text="--"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="?attr/text_withe_black"
            android:textSize="@dimen/font_11"
            android:text="价:"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tev_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_11"
            android:textColor="?attr/text_withe_black"
            tools:text="--"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="?attr/text_withe_black"
            android:textSize="@dimen/font_11"
            android:text="幅:"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tev_prencet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="?attr/text_withe_black"
            android:textSize="@dimen/font_11"
            tools:text="--"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="?attr/text_withe_black"
            android:textSize="@dimen/font_11"
            android:text="均:"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tev_average_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="?attr/text_withe_black"
            android:textSize="@dimen/font_11"
            tools:text="--"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="?attr/text_withe_black"
            android:textSize="@dimen/font_11"
            android:text="量:"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tev_volume"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_11"
            android:textColor="?attr/text_withe_black"
            tools:text="--"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.cvicse.stock.chart.ui.StockFiveDayChart
        android:id="@+id/stock_fiveday_chart"
        android:layout_toLeftOf="@+id/rel_right"
        android:layout_below="@+id/lel_top"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>