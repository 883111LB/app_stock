<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stock_layout"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stock_name"
            android:textSize="18sp"
            android:text="金软高盛七二购A"
            android:textColor="?attr/item_main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stock_id"
            android:text="12315"
            android:textSize="12sp"
            android:textColor="?attr/item_sub_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:id="@+id/stock_title"
            android:textColor="?attr/item_context_text_color"
            android:text="万科A(00002)土地投资大幅扩张"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

</LinearLayout>

    <!--<TextView-->
        <!--android:id="@+id/stock_source"-->
        <!--android:layout_gravity="left"-->
        <!--android:textColor="?attr/item_time_text_color"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->
    <TextView
        android:id="@+id/stock_time"
        android:layout_gravity="right"
        android:textColor="?attr/item_time_text_color"
        android:text="111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
