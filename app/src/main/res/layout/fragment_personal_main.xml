<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:background="@color/bg_gray_dark"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.cvicse.stock.base.ToolBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:text_title="个人"
        app:textColor_title="@color/text_white"
        android:background="?attr/bg_toolbar" />

    <RelativeLayout
        android:id="@+id/rel_setting"
        android:layout_below="@id/topbar"
        android:background="@drawable/tev_selector2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/img_right"
            android:src="@drawable/ic_setting"
            android:layout_centerVertical="true"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"/>
        <TextView
            android:paddingLeft="7dp"
            android:id="@+id/lv_setting"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textSize="15sp"/>

        <ImageView
            android:src="@drawable/ic_right_indicator"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>