<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <com.cvicse.stock.base.ToolBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:text_title="行情"
        app:textColor_title="?attr/text_toolbar_title_color"
        android:background="?attr/bg_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="?attr/markert_tablayout_bg"
        app:tabIndicatorColor="?attr/tablayout_tabIndicatorColor"
        app:tabSelectedTextColor="?attr/tablayout_tabSelectedTextColor"
        app:tabTextColor="?attr/tablayout_tabTextColor">
    </android.support.design.widget.TabLayout>
    <View
        android:background="?attr/item_divider_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vip_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>