                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_preDelta"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="昨虚实度"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_currDelta"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="今虚实度"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_updateMillisec"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最后修改毫秒"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_underlLastPx"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="标的现价"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_underlPreClose"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="标的昨收"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_underlchg"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="标的涨跌"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_underlyingSymbol"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="标的名称"
                    android:textColor="@color/appoint_font_color_gray" />

