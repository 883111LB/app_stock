                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_preSettlement"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="昨结算"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_preInterest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="昨持仓量"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_openInterest"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
