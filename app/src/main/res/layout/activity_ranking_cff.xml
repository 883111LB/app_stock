                    android:id="@+id/tev_sell_vol"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="内盘"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_buy_vol"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="外盘"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_tradingDay"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="交易日"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_stettlementGroupID"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="结算组代码"
                    android:textColor="@color/appoint_font_color_gray" />

                <TextView
                    android:id="@+id/tev_settlementID"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
