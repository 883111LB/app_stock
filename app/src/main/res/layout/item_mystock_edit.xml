<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.0">
            <ImageView
                android:layout_gravity="center|right"
                android:id="@+id/viewTag"
                android:padding="5.0dip"
                android:layout_width="36.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/img_edit_select_no"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/viewTag"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="@dimen/font_14"
                    android:textColor="?attr/item_main_text_color"
                    android:id="@+id/tev_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/font_12"
                    android:textColor="?attr/item_sub_text_color"
                    android:id="@+id/tev_stock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lel_top_view"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/img_set_top" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@id/drag_handle"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:src="@drawable/img_edit_drag" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>