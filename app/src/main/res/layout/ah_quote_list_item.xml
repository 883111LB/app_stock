<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:tag="1"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >
    <TextView
        android:id="@+id/tev_name"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        style="@style/Text_white_16"
        android:textColor="?attr/item_context_text_color" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tev_lastPrice_A"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/Text_white_18"/>

        <TextView
            android:id="@+id/tev_changeRate_A"
            android:gravity="center"
            style="@style/Text_white_18"/>
        <TextView
            android:id="@+id/tev_closePrice_A"
            android:gravity="center"
            style="@style/Text_white_18"/>

        <TextView
            android:id="@+id/tev_lastPrice_H"
            android:gravity="center"
            style="@style/Text_white_18"/>

        <TextView
            android:id="@+id/tev_changeRate_H"
            android:gravity="center"
            style="@style/Text_white_18"/>
        <TextView
            android:id="@+id/tev_closePrice_H"
            android:gravity="center"
            style="@style/Text_white_18"/>
        <TextView
            android:id="@+id/tev_premium_ah"
            android:gravity="center"
            style="@style/Text_white_18"/>
    </LinearLayout>
</LinearLayout>